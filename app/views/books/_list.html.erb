<p>
  <strong>Books:</strong>
  <ul>
    <% if books.any? %>
      <% books.each do |book| %>
        <li>
          <%= book.title %>
          <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
      <% end %>
    <% else %>
      <li>No books are available</li>
    <% end %>
  </ul>
</p>
